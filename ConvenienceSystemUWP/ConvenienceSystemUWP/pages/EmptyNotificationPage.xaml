<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConvenienceSystemUWP.pages.EmptyNotificationPage"
             Title="Nachricht versenden">
    <StackLayout Orientation="Vertical" Padding="10,30,0,20">
    	<Label FontAttributes="Bold" x:Name="TitleLabel" Text="Bitte Nachricht verfassen" HorizontalOptions="CenterAndExpand" VerticalOptions="Fill" />
    	<Label x:Name="textBoxLabel" Text="Bitte Kommentar angeben" HorizontalOptions="CenterAndExpand" />
    	<Editor x:Name="CommentBox" VerticalOptions="FillAndExpand"  />
    	<Button x:Name="SendButton" Text="Nachricht abschicken" HorizontalOptions="CenterAndExpand" />
    </StackLayout>
</ContentPage>